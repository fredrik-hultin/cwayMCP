# OAuth2 Authentication Configuration for Cway MCP Server

# Authentication method: "static" or "oauth2"
AUTH_METHOD=oauth2

# Azure AD OAuth2 Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here

# For confidential client flow (server-to-server, recommended)
AZURE_CLIENT_SECRET=your-client-secret-here

# For device code flow (interactive, useful for development)
# Leave AZURE_CLIENT_SECRET empty and set:
# USE_DEVICE_CODE_FLOW=true

# OAuth2 Scope (adjust based on your Cway API requirements)
# For Microsoft Graph:
# OAUTH2_SCOPE=https://graph.microsoft.com/.default
# For custom API:
# OAUTH2_SCOPE=api://your-api-id/.default
OAUTH2_SCOPE=https://graph.microsoft.com/.default

# Cway API Configuration
CWAY_API_URL=https://app.cway.se/graphql

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Development Configuration
LOG_LEVEL=INFO
DEBUG=false

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
